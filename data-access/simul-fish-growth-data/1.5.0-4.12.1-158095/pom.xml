		</dependency>
		<dependency>
			<groupId>org.gcube.data</groupId>
			<artifactId>simul-fish-growth-data-base</artifactId>
			<version>1.5.0-4.12.1-158095</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>[2, 3)</version>
		</dependency>
	</dependencies>
</project>