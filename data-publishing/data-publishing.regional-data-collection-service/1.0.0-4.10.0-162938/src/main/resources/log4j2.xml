<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<File name="File" fileName="${sys:catalina.home}/logs/data-collection.log" append="false">
			<PatternLayout pattern="%d{ISO8601} [%t] %-5level %logger{36} - %msg%n"/>
		</File>
	</Appenders>
	<Loggers>
		<Logger name="org.hibernate" level="info" additivity="false">
			<AppenderRef ref="File"/>
		</Logger>
		<Logger name="org.springframework" level="info" additivity="false">
			<AppenderRef ref="File"/>
		</Logger>
		<Logger name="gr.cite.regional.data.collection.application" level="debug" additivity="false">
			<AppenderRef ref="File"/>
		</Logger>
		<Logger name="gr.cite.regional.data.collection.dataaccess" level="debug" additivity="false">
			<AppenderRef ref="File"/>
		</Logger>
		<Root level="info">
			<AppenderRef ref="File"/>
		</Root>
	</Loggers>
</Configuration>