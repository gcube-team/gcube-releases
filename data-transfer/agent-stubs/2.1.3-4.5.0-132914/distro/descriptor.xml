<fileSets>
		<fileSet>
			<directory>${distroDirectory}</directory>
			<outputDirectory>/</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<includes>
				<include>README</include>
				<include>LICENSE</include>
				<include>changelog.xml</include>
                <include>profile.xml</include>
			</includes>
			<fileMode>755</fileMode>
			<filtered>true</filtered>
		</fileSet>
<fileSet>
<directory>target/apidocs</directory>
<outputDirectory>agent-service/doc/api</outputDirectory>
<useDefaultExcludes>true</useDefaultExcludes>
<fileMode>755</fileMode>
</fileSet>
</fileSets>
<dependencySets>
<dependencySet>
<includes>
<include>*:agent-stubs</include>
</includes>
<useProjectArtifact>false</useProjectArtifact>
<useTransitiveDependencies>false</useTransitiveDependencies>
<outputDirectory>agent-stubs</outputDirectory>
</dependencySet>
</dependencySets>
<files>
<file>
<source>${configDirectory}/profile.xml</source>
<outputDirectory>./</outputDirectory>
<filtered>true</filtered>
</file>
<file>
<source>target/${build.finalName}.gar</source>
<outputDirectory>agent-service</outputDirectory>
</file>
<file>
<source>${distroDirectory}/svnpath.txt</source>
<outputDirectory>agent-service</outputDirectory>
<filtered>true</filtered>
</file>
<file>
<source>${distroDirectory}/svnpath.txt</source>
<outputDirectory>agent-stubs</outputDirectory>
<filtered>true</filtered>
</file>
</files>
</assembly>